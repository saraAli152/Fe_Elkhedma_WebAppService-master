@model IEnumerable<NewWeppAppServices2.Models.Serve>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<h2>Search</h2>

<div class="panel panel-default" style="padding:15px;">
    <h1 class="panel-heading">نتائج البحث</h1>
    <div class="row">

        @foreach (var subItem in Model)
        {
            <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; height:380px;">
                <img src="~/Uploads/@subItem.ServeImage" />
                <h3>@Html.DisplayFor(modelItem => subItem.ServeName)</h3>
                <h5>@Html.DisplayFor(modelItem => subItem.ServeContent)</h5>
                @Html.ActionLink("التفاصيل", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>