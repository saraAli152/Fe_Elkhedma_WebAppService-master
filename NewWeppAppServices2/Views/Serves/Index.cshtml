@model IEnumerable<NewWeppAppServices2.Models.Serve>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

    <h2 style="margin-right:5%">قائمة الخدمات</h2>

    <h2>
        @Html.ActionLink("+ إنشاء خدمة جديدة  ", "Create", "", new { @class = "btn btn-default btn-block", style = "color:orange;font-weight: bold;font-size:20px" })
    </h2>

<table class="table table-bordered table-striped"  @*style="text-align:center; width:100%; height:300px; font-size:27px"*@>
    <tr @*style="border:2px solid orange;*@">
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServeContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServeImage)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>

            <td>
                @Html.DisplayFor(modelItem => item.ServeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServeContent)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ServeImage)*@
                <img src="~/Uploads/@Html.DisplayFor(model=>item.ServeImage)"
                     class="thumbnail" style="width:48px; height:48px" />
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>*@
            <td style="font-size:20px;">
                @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |
                @*@Html.ActionLink("تفاصيل", "Details", new { id = item.Id }) |*@
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>

        </tr>
    }

</table>
